@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_MyLayout.cshtml";
}


<div class="row">
    <div class="col">
        <section>
            <div class="login-form-icon text-center">
                <i class="fas fa-user-circle fa-9x text-secondary"></i>
            </div>
            <form id="account" method="post">
                
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row mb-2">
                    <label asp-for="Input.Email" class="col-form-label col-md-3"></label>
                    <div class="col-md-6">
                        <input asp-for="Input.Email" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="row mb-2">
                    <label asp-for="Input.Password" class="col-form-label col-md-3"></label>
                    <div class="col-md-6">
                        <input asp-for="Input.Password" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <span asp-validation-for="Input.Password" class="text-danger col-md-2"></span>
                    </div>
                    
                </div>
                <div class="row mb-2">
                    <div class="offset-3 checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="offset-3">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </div>
                
            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
