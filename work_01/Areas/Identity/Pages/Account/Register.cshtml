@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/Pages/_MyLayout.cshtml";
}

<h2 class="text-center">Registration</h2>

<div class="row">
    <div class="col">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-2">
                <label asp-for="Input.FirstName" class="col-form-label col-md-4"></label>
                <div class="col-md-6">
                    <input asp-for="Input.FirstName" class="form-control" />
                </div>
                <div class="col-md-2">
                    <span asp-validation-for="Input.FirstName" class="text-danger "></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Input.LastName" class="col-form-label col-md-4"></label>
                <div class="col-md-6">
                    <input asp-for="Input.LastName" class="form-control col-md-6" />
                </div>
                <div class="col-md-2">
                    <span asp-validation-for="Input.LastName" class="text-danger col-md-2"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Input.Email" class="col-form-label col-md-4"></label>
                <div class="col-md-6">
                    <input asp-for="Input.Email" class="form-control col-md-6" />
                </div>
                <div class="col-md-2">
                    <span asp-validation-for="Input.Email" class="text-danger col-md-2"></span>
                </div>
            </div>
           
            <div class="row mb-2">
                <label asp-for="Input.Password" class="col-form-label col-md-4"></label>
                <div class="col-md-6">
                    <input asp-for="Input.Password" class="form-control col-md-6" />
                </div>
                <div class="col-md-2">
                    <span asp-validation-for="Input.Password" class="text-danger col-md-2"></span>
                </div>
                
            </div>
            <div class="row mb-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-label col-md-4"></label>
                <div class="col-md-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control col-md-6" />
                </div>
                <div class="col-md-2">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger col-md-2"></span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="offset-4 col-md-4">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
            
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
