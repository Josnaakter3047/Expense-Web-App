@model IEnumerable<work_01.Models.Categories>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    
    <div class="col">
        <h2 class="offset-4">Category List</h2>
        <div class="offset-7 d-flex justify-content-start mb-2">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Categories">Add New</a>
        </div>
        <table class="table table-bordered table-striped w-50 offset-2">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.CategoryName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Categories" asp-route-id="@c.Id" class="btn btn-info btn-sm">Edit</a>
                            <a asp-action="Delete" asp-controller="Categories" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
        
</div>

