@model IEnumerable<work_01.Models.ExpenseView>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col">
        <h2 class="offset-4">Expense Information</h2>
        <div class="d-flex justify-content-end mb-2">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Expense">Add New</a>
        </div>
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category</th>
                    <th>Date of Expense</th>
                    <th>Total Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.CategoryName</td>
                    <td>@e.DateOfExpense.ToShortDateString()</td>
                    <td>@e.TotalAmount</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Expense" asp-route-id="@e.Id" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Expense" asp-route-id="@e.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>

